{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/test-wails.exe"
      ]
    },
    {
      "label": "build debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop,debug",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/test-wails.exe"
      ]
    },
    {
      "label": "yarn install",
      "type": "shell",
      "command": "yarn",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "yarn build",
      "type": "shell",
      "command": "yarn",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "build dev",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "dev",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/test-wails.exe"
      ],
      "dependsOn": ["yarn install", "yarn build"]
    }
  ]
}
